/**repair.wxss**/
page {
  background-color: #f8f8f8;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 32rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  display: block;
}

/* VIP提示 */
.vip-notice {
  background: linear-gradient(135deg, #fff5e6 0%, #ffe8cc 100%);
  margin: 32rpx;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid #ffb366;
}

.notice-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.notice-content {
  flex: 1;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff8c00;
  display: block;
  margin-bottom: 8rpx;
}

.notice-desc {
  font-size: 24rpx;
  color: #ff6b00;
  display: block;
}

.vip-btn {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 上传区域 */
.upload-section {
  margin: 32rpx;
}

.upload-area {
  background: white;
  border: 4rpx dashed #e0e0e0;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #667eea;
  background: #f8f9ff;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  display: block;
}

.upload-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.image-preview {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.change-btn {
  background: #f5f5f5;
  color: #333;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 设置区域 */
.settings-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.setting-item {
  margin-bottom: 40rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.repair-options {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.repair-btn {
  flex: 1;
  min-width: 180rpx;
  background: #f5f5f5;
  border: 3rpx solid transparent;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.repair-btn.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
}

.repair-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  display: block;
}

.repair-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.repair-desc {
  font-size: 22rpx;
  color: #666;
  display: block;
}

.intensity-slider {
  width: 100%;
  margin-bottom: 16rpx;
}

.intensity-value {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
  display: block;
  text-align: center;
}

/* 费用提示 */
.cost-section {
  margin: 0 32rpx 32rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 2rpx solid #ffb3b3;
}

.cost-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.cost-label {
  font-size: 26rpx;
  color: #ff4d4f;
}

.cost-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.cost-desc {
  font-size: 22rpx;
  color: #ff7875;
  text-align: center;
  display: block;
}

/* 操作区域 */
.action-section {
  margin: 0 32rpx 32rpx;
}

.repair-btn-main {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.repair-btn-main[disabled] {
  background: #ccc;
  box-shadow: none;
}

/* 结果区域 */
.result-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.success-badge {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.result-comparison {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.comparison-item {
  flex: 1;
  text-align: center;
}

.comparison-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.comparison-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.comparison-arrow {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
}

.result-actions {
  display: flex;
  gap: 16rpx;
}

.save-btn, .share-btn {
  flex: 1;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.save-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
}

.share-btn {
  background: #f5f5f5;
  color: #333;
}