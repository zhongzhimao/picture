/**batch.wxss**/
page {
  background-color: #f8f8f8;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 32rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  display: block;
}

/* VIP提示 */
.vip-notice {
  background: linear-gradient(135deg, #fff5e6 0%, #ffe8cc 100%);
  margin: 32rpx;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid #ffb366;
}

.notice-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.notice-content {
  flex: 1;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff8c00;
  display: block;
  margin-bottom: 8rpx;
}

.notice-desc {
  font-size: 24rpx;
  color: #ff6b00;
  display: block;
}

.vip-btn {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 上传区域 */
.upload-section {
  margin: 32rpx;
}

.upload-area {
  background: white;
  border: 4rpx dashed #e0e0e0;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #667eea;
  background: #f8f9ff;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  display: block;
}

.upload-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.images-preview {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
}

.thumb-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.remove-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.add-more {
  aspect-ratio: 1;
  border: 4rpx dashed #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
}

.change-btn {
  background: #f5f5f5;
  color: #333;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 设置区域 */
.settings-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.setting-item {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.batch-options {
  display: flex;
  gap: 16rpx;
}

.batch-btn {
  flex: 1;
  background: #f5f5f5;
  border: 3rpx solid transparent;
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  font-size: 24rpx;
  color: #333;
  transition: all 0.3s ease;
}

.batch-btn.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
  color: #667eea;
  font-weight: 500;
}

/* 操作区域 */
.action-section {
  margin: 0 32rpx 32rpx;
}

.process-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.process-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

/* 结果区域 */
.result-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.success-badge {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.result-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.result-item {
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.result-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.result-actions {
  display: flex;
  gap: 16rpx;
}

.save-all-btn {
  flex: 1;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
}