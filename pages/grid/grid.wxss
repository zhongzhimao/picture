/**grid.wxss**/
page {
  background-color: #f8f8f8;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 32rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  display: block;
}

/* 上传区域 */
.upload-section {
  margin: 32rpx;
}

.upload-area {
  background: white;
  border: 4rpx dashed #e0e0e0;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #667eea;
  background: #f8f9ff;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  display: block;
}

.upload-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.image-preview {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.image-info {
  margin-bottom: 24rpx;
}

.info-item {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.change-btn {
  background: #f5f5f5;
  color: #333;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 设置区域 */
.settings-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.setting-item {
  margin-bottom: 40rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.grid-options {
  display: flex;
  gap: 16rpx;
}

.grid-btn {
  flex: 1;
  background: #f5f5f5;
  border: 3rpx solid transparent;
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.grid-btn.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
}

.grid-preview {
  display: grid;
  gap: 2rpx;
  margin-bottom: 12rpx;
  justify-content: center;
}

.grid-btn[data-mode="3x3"] .grid-preview {
  grid-template-columns: repeat(3, 20rpx);
  grid-template-rows: repeat(3, 20rpx);
}

.grid-btn[data-mode="2x3"] .grid-preview {
  grid-template-columns: repeat(3, 20rpx);
  grid-template-rows: repeat(2, 20rpx);
}

.grid-btn[data-mode="4x4"] .grid-preview {
  grid-template-columns: repeat(4, 15rpx);
  grid-template-rows: repeat(4, 15rpx);
}

.grid-item {
  background: #667eea;
  border-radius: 2rpx;
}

.grid-item.small {
  background: #667eea;
  border-radius: 1rpx;
}

.grid-name {
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
}

.border-slider {
  width: 100%;
  margin-bottom: 16rpx;
}

.border-value {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
  display: block;
  text-align: center;
}

.color-options {
  display: flex;
  gap: 16rpx;
}

.color-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  padding: 0;
  transition: all 0.3s ease;
}

.color-btn.active {
  border-color: #667eea;
  transform: scale(1.1);
}

/* 操作区域 */
.action-section {
  margin: 0 32rpx 32rpx;
}

.cut-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.cut-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

/* 结果区域 */
.result-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.success-badge {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.result-grid {
  display: grid;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

/* 3x3网格 */
.result-grid[data-count="9"] {
  grid-template-columns: repeat(3, 1fr);
}

/* 2x3网格 */
.result-grid[data-count="6"] {
  grid-template-columns: repeat(3, 1fr);
}

/* 4x4网格 */
.result-grid[data-count="16"] {
  grid-template-columns: repeat(4, 1fr);
}

.result-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.result-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-index {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  background: rgba(0,0,0,0.6);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.result-actions {
  display: flex;
  gap: 16rpx;
}

.save-all-btn, .share-btn {
  flex: 1;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.save-all-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
}

.share-btn {
  background: #f5f5f5;
  color: #333;
}