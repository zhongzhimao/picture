/**vip.wxss**/
page {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* VIP状态卡片 */
.vip-status-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.9) 100%);
  margin: 32rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.vip-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.vip-icon.active {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.status-info {
  flex: 1;
}

.status-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.status-details {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
}

.expire-time, .remaining-days {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.remaining-days {
  color: #52c41a;
  font-weight: 500;
}

/* 通用区域样式 */
.privileges-section,
.packages-section,
.credits-section,
.usage-section {
  background: white;
  margin: 0 32rpx 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin-right: 16rpx;
  border-radius: 3rpx;
}

/* VIP特权 */
.privilege-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.privilege-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.privilege-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.privilege-content {
  flex: 1;
}

.privilege-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.privilege-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.privilege-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
}

/* VIP套餐 */
.package-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.package-item {
  background: #f8f9fa;
  border: 3rpx solid transparent;
  border-radius: 20rpx;
  padding: 28rpx;
  position: relative;
  transition: all 0.3s ease;
}

.package-item.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.package-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.package-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #667eea;
}

.package-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.package-tag {
  position: absolute;
  top: -10rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.package-tag.discount {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

/* 积分充值 */
.credits-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.credit-item {
  background: #f8f9fa;
  border: 3rpx solid transparent;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
}

.credit-item.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
}

.credit-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.credit-price {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.credit-tag {
  position: absolute;
  top: -8rpx;
  right: 12rpx;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* 支付区域 */
.payment-section {
  background: white;
  margin: 0 32rpx 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
}

.payment-info {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
}

.payment-label {
  font-size: 26rpx;
  color: #666;
}

.payment-credits {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  margin-left: 8rpx;
}

.payment-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  width: 100%;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  margin-bottom: 16rpx;
}

.payment-tips {
  font-size: 22rpx;
  color: #999;
}

/* 使用记录 */
.usage-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.usage-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
}

.usage-info {
  flex: 1;
}

.usage-feature {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 4rpx;
}

.usage-time {
  font-size: 22rpx;
  color: #999;
  display: block;
}

.usage-cost {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: 500;
}

.empty-usage {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}