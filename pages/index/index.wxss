/**index.wxss**/
page {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* 头部banner */
.header-banner {
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.banner-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.banner-title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.banner-subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
}

/* 区域样式 */
.section {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-desc {
  font-size: 24rpx;
  color: #666;
  margin-left: 16rpx;
}

.vip-badge {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  margin-left: 16rpx;
  font-weight: 500;
}

.ad-badge {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  margin-left: 16rpx;
  font-weight: 500;
}

/* 功能网格 */
.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.feature-item:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.vip-feature {
  background: linear-gradient(135deg, #fff5e6 0%, #ffe8cc 100%);
  border: 2rpx solid #ffb366;
}

.ad-feature {
  background: linear-gradient(135deg, #fff0f0 0%, #ffe0e0 100%);
  border: 2rpx solid #ff9999;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 用户状态卡片 */
.user-status-card {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.login-prompt {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.login-prompt:active {
  transform: scale(0.95);
}

.login-text {
  color: white;
  font-size: 20rpx;
  font-weight: 500;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  transition: all 0.3s ease;
}

.user-avatar.not-logged-in {
  border: 3rpx dashed #ccc;
  opacity: 0.7;
}

.user-avatar:active {
  transform: scale(0.95);
}

.user-name.clickable {
  cursor: pointer;
  position: relative;
}

.user-name.clickable:active {
  opacity: 0.7;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.user-level {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.mini-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  border: none;
  line-height: 1.5;
}

.ad-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  position: relative;
  overflow: hidden;
}

.ad-btn::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(45deg, #ff6b6b, #ff8e53, #ff6b6b);
  border-radius: 24rpx;
  opacity: 0;
  z-index: -1;
  transition: opacity 0.3s ease;
}

.ad-btn:active::before {
  opacity: 1;
}

.status-info {
  display: flex;
  justify-content: space-between;
}

.info-item {
  text-align: center;
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

/* 分享区域 */
.share-section {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  display: flex;
  gap: 24rpx;
}

.share-btn {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  line-height: 1.4;
}

.timeline-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
}

.share-icon {
  font-size: 36rpx;
}

.share-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}
