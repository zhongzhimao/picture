/**convert.wxss**/
page {
  background-color: #f8f8f8;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 32rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  display: block;
}

/* 上传区域 */
.upload-section {
  margin: 32rpx;
}

.upload-area {
  background: white;
  border: 4rpx dashed #e0e0e0;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #667eea;
  background: #f8f9ff;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  display: block;
}

.upload-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.image-preview {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.image-info {
  margin-bottom: 24rpx;
}

.info-item {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.change-btn {
  background: #f5f5f5;
  color: #333;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 格式选择 */
.format-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.format-options {
  display: flex;
  gap: 16rpx;
}

.format-btn {
  flex: 1;
  background: #f5f5f5;
  border: 3rpx solid transparent;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.format-btn.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
}

.format-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  display: block;
}

.format-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.format-desc {
  font-size: 22rpx;
  color: #666;
  display: block;
}

/* 质量设置 */
.quality-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.setting-item {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.quality-slider {
  width: 100%;
  margin-bottom: 16rpx;
}

.quality-value {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
  display: block;
  text-align: center;
}

/* 操作区域 */
.action-section {
  margin: 0 32rpx 32rpx;
}

.convert-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.convert-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

/* 结果区域 */
.result-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.success-badge {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.result-preview {
  margin-bottom: 24rpx;
}

.result-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
}

.result-info {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.result-actions {
  display: flex;
  gap: 16rpx;
}

.save-btn, .share-btn {
  flex: 1;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.save-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
}

.share-btn {
  background: #f5f5f5;
  color: #333;
}

/* 隐藏的canvas */
canvas {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
}